@model bmTakeNow
@{
    ViewBag.Title = "添加取现";
    Layout = "~/Views/Shared/_SysLayout.cshtml";    
    string rs = ViewBag.RS;
    var backurl = ViewBag.ReturnUrl ?? "/MM/Index";
    Model.ID = Guid.NewGuid();
    var refVModel = new ReferenceVModel();
    var NavList = refVModel.GetReferencesByRefGroupId(MorSun.Common.类别组.RefGroup.开户银行).ToList();
    var RAQKList = refVModel.GetReferencesByRefGroupId(MorSun.Common.类别组.RefGroup.答题认证情况).ToList();
}
@Styles.Render("~/Content/themes/base/css")
@Scripts.Render("~/bundles/jqueryui")
<section class="featuredwhite">
    <div class="content-wrapper clear-fix"> 
        <div class="alert @("alert-success".getBC("BootStrapCssAlert"))">
            <button class="btn green submitBtn" type="button" id="submitBtn">@("提交".GX())</button>            
            <button class="btn" type="button" onclick="jumptourl('@backurl')">@("返回".GX())</button>
        </div>         
        <div class="portlet box @("red".getBC("BootStrapCssTable"))">
            <div class="portlet-title">
                <div class="caption"><i class="icon-cogs"></i>添加取现</div>
            </div>
            <div class="portlet-body">
                @using (Html.BeginForm("Create", "BMTakeNow", new { ReturnUrl = "/BMTakeNow/Edit/" + Model.ID }, FormMethod.Post, new { id = "fmForm" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.ID)
                    @Html.HiddenFor(m => m.UserId)
                    <table class="tableadd table-hover">
                        <thead>
                            <tr>
                                <th>@Html.LabelFor(m => m.TrueName)</th>
                                <td>@Html.TextBoxFor(m => m.TrueName, new { @class = "m-wrap large" })</td>
                            </tr>
                        </thead>
                        <tbody>                            
                            <tr>
                                <th>@Html.LabelFor(m => m.ALiPayNum)</th>
                                <td>@Html.TextBoxFor(m => m.ALiPayNum, new { @class = "m-wrap large" })</td>
                            </tr>
                            <tr>
                                <th>@Html.LabelFor(m => m.BankRef)</th>
                                <td>@MvcHtmlString.Create(Html.DropDownList("BankRef", "BankRef", NavList, Model.BankRef.ToString(), "class=\"m-wrap large\"", "ID", "ItemValue", "", ""))</td>
                            </tr>
                            <tr>                                
                                <th>@Html.LabelFor(m => m.BankNum)</th>
                                <td>@Html.TextBoxFor(m => m.BankNum, new { @class = "m-wrap large" })</td>
                            </tr>     
                            <tr>
                                <th>@Html.LabelFor(m => m.CertificationRef)</th>
                                <td>@MvcHtmlString.Create(Html.DropDownList("CertificationRef", "CertificationRef", RAQKList, Model.CertificationRef.ToString(), "class=\"m-wrap large\"", "ID", "ItemValue", "", ""))</td>
                            </tr>   
                            <tr>
                                <th>@Html.LabelFor(m => m.Remark)</th>
                                <td>@Html.TextAreaFor(m => m.Remark, new { @class = "m-wrap large" })</td>
                            </tr>                                              
                        </tbody>
                    </table>
            }
            </div>
        </div> 
    </div>   
</section>
    @section Scripts {        
        @Scripts.Render("~/bundles/jqueryval")        
        @Scripts.Render("~/bundles/validator")
        @Styles.Render("~/Content/JQueryQtipCss")
        @Scripts.Render("~/bundles/jqueryqtip")
        @Scripts.Render("~/bundles/morsuncommon")        
        <script type="text/javascript">  
            $(ajaxSubmitFormHandle('.submitBtn', '#fmForm', '提交失败，请联系管理员', '#divInfo', true, morsunInitform,[]));
            function morsunInitform() {
                $('#NewTitle').val('');
                $('#NewKeyWord').val('');                
                UE.getEditor('NewContent').execCommand('cleardoc');
            }                   
        </script>
    }
